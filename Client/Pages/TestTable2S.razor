            Data="@testTable2S" Count=count LoadData=@Grid0LoadData RowUpdate=@GridRowUpdate RowCreate=@GridRowCreate TItem="CloudDevOpsProject1.Server.Models.DevOps_Proj_Database.TestTable2" >
            <Columns>
                <RadzenDataGridColumn TItem="CloudDevOpsProject1.Server.Models.DevOps_Proj_Database.TestTable2" Property="NateIsGay" Title="NateIsGay">
                  <EditTemplate Context="testTable2">
                      <RadzenTextBox style="display: block; width: 100%" @bind-Value="@testTable2.NateIsGay" Name="NateIsGay" />
                      <RadzenRequiredValidator Component="NateIsGay" Text="NateIsGay is required" style="position: absolute" />
                  </EditTemplate>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CloudDevOpsProject1.Server.Models.DevOps_Proj_Database.TestTable2" Filterable="false" Sortable="false" Width="156px" TextAlign="TextAlign.Center">
                    <EditTemplate Context="testTable2">
                        <RadzenButton Icon="check" ButtonStyle="ButtonStyle.Success" Variant="Variant.Flat" Size="ButtonSize.Medium"
                            style="margin-top: 0.25rem; margin-right: 0.25rem; margin-bottom: 0.25rem"
                            Click=@(args => SaveButtonClick(args, testTable2)) @onclick:stopPropagation="true" />
