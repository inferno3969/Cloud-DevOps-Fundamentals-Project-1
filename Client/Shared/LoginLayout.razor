                                <div class="col-md-6 p-5" style="justify-content: center; align-items: center">
                                    @Body
                                </div>
                            </div>
                        </div>
                    </RadzenCard>
                    <RadzenText Text="CloudDevOpsProject1.Server v.1.0.0, Copyright â’¸ 2023" TextStyle="Radzen.Blazor.TextStyle.Caption" TextAlign="Radzen.TextAlign.Center" Style="width: 100%; margin-top: 20px" TagName="Radzen.Blazor.TagName.P"/>
                </div>
            </div>
        </div>
    </RadzenBody>
